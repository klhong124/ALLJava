public class test {
	public static void main(String[] args) {
		
		HashMapRestaurantMenu foodMenu = new HashMapRestaurantMenu();
		foodMenu.HashMapRestaurantMenu("food");	
		foodMenu.getRestaurantMenu();
		HashMapRestaurantMenu drinkMenu = new HashMapRestaurantMenu();
		drinkMenu.HashMapRestaurantMenu("drink");
	}
}

/** there are two java files*/

import java.util.HashMap;
import java.util.Scanner;
public class HashMapRestaurantMenu {
	private Scanner input;
	private String type;
	private boolean YN=true;
	HashMap<String, Integer> EditRestaurantMenu = new HashMap<String, Integer>();
	public void getRestaurantMenu(){
		 for (String item : EditRestaurantMenu.keySet()) {
		    	System.out.println(item+"	$"+EditRestaurantMenu.get(item));
		         	};
	};
	public void HashMapRestaurantMenu(String typename) {
		type=typename;
		input = new Scanner(System.in);
		System.out.println("you're now editing the "+type+" menu");
		
		while(YN){
			
		System.out.println("Enter "+type+" name:");
		String food     = input.nextLine();
		System.out.println("Enter "+type+" price:");
		int    price  	= Integer.parseInt(input.nextLine());
	    EditRestaurantMenu.put(food,price);	
	    System.out.println("Now your "+type+" menu is like: ");
	    for (String item : EditRestaurantMenu.keySet()) {
	    	System.out.println(item+"	$"+EditRestaurantMenu.get(item));
	         	};
	         	
	         	System.out.println("Enter Y to continue");
	    	    String YorN = input.nextLine();
	    	    char yn = YorN.charAt(0);
	    	    YN=(yn=='Y')?true:false;
		}
	 }	

	
}
